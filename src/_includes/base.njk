<!doctype html>
<html lang="{{ meta.lang }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- SEO -->
    {% set pageTitle -%}
    {%- if title %}{{ title }} - {% endif -%}
    {{- meta.title -}}
    {%- endset -%}
    {% set pageDescription -%}
    {{- description or meta.description -}}
    {%- endset -%}
    <title>{{ pageTitle }}</title>
    <meta property="og:title" content="{{ pageTitle }}">
    <meta name="description" content="{{ pageDescription }}">
    <meta property="og:description" content="{{ pageDescription }}">
    <meta property="og:type" content="{{ ogtype or "article" }}">
    <meta property="og:image" content="{{ image or meta.image }}">
    <meta name="theme-color" content="{{ meta.themeColor }}">
    <meta name="generator" content="{{ eleventy.generator }}">
    <meta name="format-detection" content="telephone=no">
    <meta name="author" content="{{ meta.author }}">
    {% for name, content in meta.verification -%}
      <meta name="{{ name }}-verification" content="{{ content }}">
    {%- endfor %}
    <!-- Links -->
    {% set pageURL -%}
    {{- meta.url -}}
    {{- page.url -}}
    {%- endset -%}
    <meta property="og:url" content="{{ pageURL }}">
    <link rel="canonical" href="{{ pageURL }}">
    <link rel="stylesheet" href="/index.css">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
  </head>
  <body>
    {{ content | safe }}
  </body>
</html>
