<!doctype html>
<html lang="{{ meta.lang }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <!-- SEO -->
    <title>
      {% if title %}{{ title }} - {% endif -%}
      {{ meta.title }}
    </title>
    <meta
      name="description"
      property="og:description"
      content="{{ description | default: meta.description | typography }}"
    >
    <meta property="og:type" content="{{ ogtype | default: "website" }}">
    <meta property="og:image" content="{{ image | default: meta.image }}">
    <meta name="color-scheme" content="light dark">
    <meta name="theme-color" content="{{ meta.themeColor }}">
    <meta name="generator" content="{{ eleventy.generator }}">
    <meta name="format-detection" content="telephone=no">
    <meta name="author" content="{{ author | default: meta.author }}">
    {% for item in meta.verification -%}
      <meta name="{{ item[0] }}-verification" content="{{ item[1] }}">
    {%- endfor %}
    <!-- Links -->
    <link rel="canonical" href="{{ meta.url }}{{ page.url }}">
    <link rel="stylesheet" href="/index.css">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
  </head>
  <body>
    {{ content }}
  </body>
</html>
