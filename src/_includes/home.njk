---
layout: base.njk
---
<style type="text/css">
  {% set steps = meta.title | length %}
  @keyframes typing { {% for i in range(1, steps + 1) %}
    {{ (i * 100.0 / steps) | round }}% {
      content: "{{ meta.title.slice(0, i) }}";
    }
    {% endfor %}
  }

  .hero .site-title {
    animation-timing-function: steps({{ steps }});
  }

  .hero .site-title:before {
    animation-name: typing;
    animation-timing-function: steps({{ steps }});
  }
</style>

<header class="hero" data-theme="dark">{% include 'nav.njk' %}</header>

<main class="container">
  {{ content | safe }}

  <article class="h-feed">
    <header>
      <hgroup>
        <h2>
          <data class="p-name" value="Notes by {{ meta.author }}">Notes</data>
        </h2>
        <h3 class="p-summary">Not quite posts. More like digital leftovers.</h3>
      </hgroup>
    </header>
    <ol reversed>
      {% for post in collections.home %}
        <li class="h-entry">
          <a href="{{ post.url }}" class="u-url p-name">{{ post.data.title }}</a>
          {% if post.data.description -%}
            <br>
            <span class="p-summary">{{ post.data.description | typography }}</span>
          {%- endif %}
          <data class="dt-published" value="{{ post.date.toISOString() }}" />
          {%- if post.updated -%}
            <data
              class="dt-updated"
              value="{{ post.updated.toISOString() }}"
            />
          {%- endif %}
        </li>
      {% endfor %}
    </ol>
  </article>
</main>
